{{- $.Scratch.Add "pagesIndex" slice -}}
{{- range $index, $page := .Site.Pages -}}

  

    {{- if gt (len $page.Content) 0 -}}
    
      {{- $pageData := (dict "title" $page.Title  "href" $page.Permalink "description" $page.Params.description "type" $page.Type "date" $page.Params.date "archived" $page.Params.archived) -}}
      {{- $.Scratch.Add "pagesIndex" $pageData -}}
    {{- end -}}
  
{{- end -}}
{{- $.Scratch.Get "pagesIndex" | jsonify -}}
